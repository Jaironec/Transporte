<UserControl x:Class="TransporteApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título del Dashboard -->
        <TextBlock Grid.Row="0"
                 Text="Resumen de Operaciones"
                 FontSize="24"
                 FontWeight="SemiBold"
                 Margin="0,0,0,24"/>

        <!-- Tarjetas KPI -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Primera Fila de KPIs -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- KPI: Ganancia del Mes -->
                <Border Grid.Column="0" Style="{StaticResource KPICardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="CurrencyUsd" 
                                                   Width="32" 
                                                   Height="32"
                                                   Foreground="{StaticResource AccentOrange}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>
                            <TextBlock Text="Ganancia del Mes"
                                     FontSize="16"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1"
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 Margin="0,8,0,4">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="S/ {0:N2}">
                                    <Binding Path="GananciaDelMes"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>

                        <TextBlock Grid.Row="2"
                                 Text="Ingresos netos del mes actual"
                                 FontSize="12"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </Grid>
                </Border>

                <!-- KPI: Viajes en Curso -->
                <Border Grid.Column="1" Style="{StaticResource KPICardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="MapMarkerMultiple" 
                                                   Width="32" 
                                                   Height="32"
                                                   Foreground="{StaticResource AccentTurquoise}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>
                            <TextBlock Text="Viajes en Curso"
                                     FontSize="16"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1"
                                 Text="{Binding ViajesEnCurso}"
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 Margin="0,8,0,4"/>

                        <TextBlock Grid.Row="2"
                                 Text="Viajes activos en este momento"
                                 FontSize="12"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </Grid>
                </Border>

                <!-- KPI: Litros Transportados Hoy -->
                <Border Grid.Column="2" Style="{StaticResource KPICardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="Water" 
                                                   Width="32" 
                                                   Height="32"
                                                   Foreground="{StaticResource PrimaryBlue}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>
                            <TextBlock Text="Litros Transportados"
                                     FontSize="16"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1"
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 Margin="0,8,0,4">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0:N0} L">
                                    <Binding Path="LitrosTransportadosHoy"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>

                        <TextBlock Grid.Row="2"
                                 Text="Cantidad transportada hoy"
                                 FontSize="12"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Segunda Fila: Viajes Recientes -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                             Text="Viajes Recientes"
                             FontSize="20"
                             FontWeight="Bold"
                             Margin="0,0,0,16"/>

                    <DataGrid Grid.Row="1"
                            x:Name="ViajesRecientesGrid"
                            ItemsSource="{Binding ViajesRecientes}"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            HeadersVisibility="Column"
                            GridLinesVisibility="None"
                            Background="Transparent"
                            BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Número" Binding="{Binding NumeroViaje}" Width="120"/>
                            <DataGridTextColumn Header="Origen" Binding="{Binding Origen}" Width="*"/>
                            <DataGridTextColumn Header="Destino" Binding="{Binding Destino}" Width="*"/>
                            <DataGridTextColumn Header="Fecha Salida" Width="150">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="FechaSalida" StringFormat="{}{0:dd/MM/yyyy HH:mm}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Litros" Width="100">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="CantidadLitros" StringFormat="{}{0:N0}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
